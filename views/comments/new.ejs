<%  include ../partials/header %>
<div class="container">
    <h1 style="margin: 20 auto; padding: 20px; "> Create a new Comment:</h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
              <label for="Name">Comment</label>
              <input type="text" name="comment[text]" class="form-control" placeholder="Enter comment">  
            </div>
           
            <div class="form-group">
                <label for="description">Author</label>
                <input type="text" name="comment[author]" class="form-control" placeholder="Enter author Name">
              </div>

           
            <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      
      <a href="/campgrounds">Go back</a>
  </div>


<% include ../partials/footer %>